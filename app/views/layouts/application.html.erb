<!DOCTYPE html>
<html>
<head>
  <title>Bloglab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= csrf_meta_tags %>
</head>
<body>
 <div id="sidebar">
	 <div id= "logo">
		 <%= link_to root_path do %>
			 <%= image_tag "nihongo.png" %>
		 <% end %>
	 </div>

	 <ul>
		 <li class="category"><%= t "layouts.title"  %></li>
		 <li><%= link_to "Blog", root_path %></li>
		 <li><%= link_to "About", about_path %></li>
		 <li><a href="http://localhost:3000/users/sign_up">Registration</a></li>
	 </ul>

	 <ul>
		 <li class="category">Контакты</li>
		 <li><a href="http://vk.com/id90664978">VK</a></li>
		 <li><a href="https://twitter.com/StasSidorenko2">Twitter</a></li>
		
	 </ul>

	 <ul>
		 <li class="category">Languages</li>
		 <li><%= link_to "English", locale: "en" %></li>
		 <li><%= link_to "日本語", locale: "ja" %></li>
		 <li><%= link_to "Українська" %></li>
	 </ul> 

       <% if !user_signed_in? %>  
	       <p class="sign_in">Admin Login</p>
       <% end %>
 </div>

 <div id="main_content">
	 <div id="header">
		 
		 <% if current_page?(root_path) %>
			 <p>All posts</p>
		 <% elsif current_page?(about_path) %>
			 <p>About</p>
		 <% else %>
			 <%= link_to "Back to All posts", root_path %>
		 <% end %>

		 <% if user_signed_in? %>

		 <div class="buttons">
			 <button class="button"><%= link_to "New post", new_post_path %></button>
	</button><%= link_to "Log Out", destroy_user_session_path, :class => "button", method: :delete %>

		 </div>
	 <% end %>
	 <% if !user_signed_in? %>
		 <div class="buttons">
			 <button class="button"><%= link_to "Log in", new_post_path %></button> 
		 </div>
	 <% end %>
	 </div>
	 <% flash.each do |name, msg|%>
		 <%= content_tag(:div, msg, class: "alert") %>
 <% end %>
 <%= yield %>
 </div>
 

</body>
</html>
