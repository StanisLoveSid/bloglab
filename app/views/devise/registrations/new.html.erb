<div id="page_wrapper">
<h2><%= t "devise.sign_up" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label(t("devise.email")) %><br />
  <%= f.email_field :email, autofocus: true %></div>
  <br>
  <div><%= f.label(t("devise.password")) %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label(t("devise.password_confirmation")) %><br>
	  <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
 
  <br>
  <div><%= f.submit(t("devise.sign_up")) %></div>
<% end %>
  <br>
<%= render "devise/shared/links" %>
</div>
